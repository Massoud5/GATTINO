{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    {% block navBar %}{% endblock %}

    <section class="categorie-form-section">
        <div class="admin-form-style">
            <h2>Ajouter une catégorie</h2>
            <div class="form-control">
                <div class="row">
                    <div class="mb-3">
                        {{ form(formAddCategorie) }}
                    </div>
                </div>
            </div>
        </div>
    </section>


    <style>
        footer{
            display: none;
        }
    </style>

    <script type="text/javascript">
        const nomCat = document.getElementById('categorie_form_nomCategorie');
        const imgCat = document.getElementById('categorie_form_image');

        if(!nomCat.value){
            imgCat.setAttribute('required', 'true');
        }
    </script>
{% endblock %}